{
  "manifest_version": 2,
  "name": "IMDB Netflix Enhancer",
  "version": "0.4",
  "description": "Display imdb ratings on netflix",
  "content_scripts": [
  {
    "matches": [
      "https://www.netflix.com/*", "https://www.omdbapi.com/*"
    ],
    "js": ["content.js"]
  }
  ],
  "icons": { "16": "icon16.png", "48":"icon48.png", "128":"icon128.png"},
  "permissions": [
    "https://www.netflix.com/*", "https://www.omdbapi.com/*"
  ],
  "browser_action" : {
    "default_icon" :"icon48.png"
  }
}